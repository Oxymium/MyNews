<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raspberyl.mynews.controller.NotificationsActivity">

    <EditText
        android:id="@+id/notifications_activity_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Search query term"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/notifications_activity_checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Arts"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="73dp" />

    <CheckBox
        android:id="@+id/notifications_activity_checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="114dp" />

    <CheckBox
        android:id="@+id/notifications_activity_checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrepreneurs"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="157dp" />

    <CheckBox
        android:id="@+id/notifications_activity_checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Politics"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="73dp" />

    <CheckBox
        android:id="@+id/notifications_activity_checkBox5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sports"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="124dp" />

    <CheckBox
        android:id="@+id/notifications_activity_checkBox6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="166dp" />

    <Switch
        android:id="@+id/notifications_activity_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Enable notifications (once per day)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="241dp" />


</android.support.constraint.ConstraintLayout>
