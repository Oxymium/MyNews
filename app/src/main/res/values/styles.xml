<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myNewsBlue</item>
        <item name="colorPrimaryDark">@color/myNewsDarkBlue</item>
        <item name="colorAccent">@color/myNewsYellow</item>
    </style>

    <!-- TOOLBAR THEME -->
    <style name="MyNewsToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Color of the title text in the Toolbar -->
        <item name="android:textColorPrimary">@color/myNewsWhite</item>
        <item name="android:textColorSecondary">@color/myNewsWhite</item>
        <item name="android:actionMenuTextColor">@color/myNewsYellow</item>

    </style>

    <!-- TOOLBAR TITLE THEME -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    </style>

    <!-- OVERFLOW THEME -->
    <style name="Toolbar.OverflowTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/myNewsWhite</item>
        <item name="android:textColor">@color/myNewsBlack</item>
    </style>

    <!-- EDITTEXT THEME -->
    <style name="EditText.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorSecondary">@color/myNewsBlue</item>
        <item name="android:textColor">@color/myNewsBlack</item>
    </style>

    <!-- CHECKBOX THEME -->
    <style name="CheckBox.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/myNewsBlue</item>
        <item name="android:textColorPrimary">@color/myNewsBlack</item>
    </style>

    <!-- BUTTON THEME -->
    <style name="SearchButton.Theme" parent="Base.Theme.AppCompat">
        <item name="colorButtonNormal">@color/myNewsBlue</item>
    </style>

    <!-- SWITCH THEME -->
    <style name="Switch.Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/myNewsBlue</item>
        <item name="android:textColorPrimary">@color/myNewsBlack</item>

    </style>




</resources>